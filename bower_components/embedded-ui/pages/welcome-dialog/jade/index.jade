extend ../../../jade/base

include ../../../bower_components/ui/jade/typekit
include ../../../bower_components/ui/jade/logo

block head-before-styles
  +typekit

  style.
    body {
      display: none;
    }

block body-before-scripts
  .banner.only-in-page
    p
      em Don’t worry
      | , only you can see this.

  .dialog-scroller
    .dialog-vertical-align-outer
      .dialog-vertical-align-inner
        .dialog
          header
            +logo
            h1 Congrats! You’ve successfully installed Eager.
            h2
              em Don’t worry
              span.only-in-wordpress
                |, we'll only show this once.
              span.only-in-page
                | , only you can see this new stuff we added to your page.
          section
            p.spaced
              | Now that you’ve added Eager to your site,
              br
              | you can install any app in the App Store.
          footer.hero
            // Copy also set in index.coffee:
            button.primary.fancy.large.install-cta Let’s install an app!
